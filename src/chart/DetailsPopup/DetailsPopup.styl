@import '../variables.styl'

.theme_light
    .line
        background-color: $verticalLineColor
    .mark
        background-color: $chartBgColor
    .popup
        background-color: $chartBgColor
        box-shadow: 0 1px 3px 0 rgba(0,0,0,0.2)
    .popupXValue
        color: #404040
    .yItemName
        color: #404040


.theme_dark
    .line
        background-color: $verticalLineColorDark
    .mark
        background-color: $chartBgColorDark
    .popup
        background-color: #1b2533
        // box-shadow: 0 1px 3px 0 rgba(0,0,0,0.3)
    .popupXValue
        color: #ffffff
    .yItemName
        color: #ffffff

.root
    position: absolute
    left: $padding
    &.visible
        .line
            display: block
            // off transition in firefox
            transition: transform 0.1s ease-out
        .mark
            transition: transform 0.1s ease-out

.line
    position: absolute
    top: 0
    bottom: 0
    left: -0.5px
    width: 1px
    display: none

.mark
    position: absolute
    box-sizing: border-box
    left: -5.5px;
    bottom: 0;
    width: 12px;
    height: 12px;
    border-radius: 12px;
    margin-bottom: -6px
    border-width: 2px
    border-style: solid

.popup
    position: absolute;
    top: 20px
    left: 0
    padding: 10px
    background-color: white
    transform: translate(-50%, 0)
    border-radius: 8px
    transition: opacity 0.2s ease-out

.popupXValue
    font-size: 14px
    white-space: nowrap
    padding-bottom: 3px

.yItemValueLine
    display: flex
    justify-content: space-between
    white-space: nowrap
    font-size: 14px
    padding-top: 2px
    .yItemName
        margin-right: 10px
