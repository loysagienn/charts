@import '../variables.styl'

.theme_light
    color: #404040

.theme_dark
    color: #ffffff

.header
    height: 70px
    // display: flex
    // align-items: center
    padding: 0 $padding
    box-sizing: border-box

.title
    position: absolute
    left: $padding
    top: 20px
    line-height: 30px
    font-size: 16px
    font-weight: bold
    transform: scale(1, 1)
    opacity: 1
    transition: transform 0.2s ease-out, opacity 0.2s ease-out

.zoomOut
    position: absolute
    left: $padding
    top: 20px
    line-height: 30px
    cursor: pointer
    color: #108BE3
    font-size: 16px
    opacity: 0
    transform: scale(0.1, 0.1);
    transition: transform 0.2s ease-out, opacity 0.2s ease-out

.zoomIcon
    display: block
    float: left
    margin-top: 4px
    padding-right: 3px
    path
        fill: #108BE3

.dateRange
    position: absolute
    right: $padding
    top: 20px
    line-height: 30px
    font-size: 12px
    font-weight: bold

.subChart
    .title
        opacity: 0
        transform: scale(0.1, 0.1);
    .zoomOut
        opacity: 1
        transform: scale(1, 1);
