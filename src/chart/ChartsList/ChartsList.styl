@import '../variables.styl'

$borderWidth = 1px
$itemPadding = 7px
$contentSize = $chartListHeight - (2 * ($borderWidth + $itemPadding))

.theme_light
    .item
        border: $borderWidth solid $chartListItemBorderColor
        color: $chartListItemTextColor
    .switcher
        .switcherInner
            background-color: $chartBgColor

.theme_dark
    .item
        border: $borderWidth solid $chartListItemBorderColorDark
        color: $chartListItemTextColorDark
    .switcher
        .switcherInner
            background-color: $chartBgColorDark

.root
    position: absolute
    bottom: 20px
    left: $padding
    overflow: auto

.list
    height: 100%
    display: flex
    align-items: center

.item
    border-radius: $chartListHeight
    padding: $itemPadding
    padding-right: 15px
    line-height: $contentSize
    font-size: 15px
    cursor: pointer

    &:not(:last-child)
        margin-right: 15px

.switcher
    position: relative
    float: left
    margin-right: 10px
    width: $contentSize
    height: $contentSize
    border-radius: $contentSize
    .switcherCheck
        position: absolute
        left: 0
        right: 0
        top: 0
        bottom: 0
        border-radius: $contentSize
        background-image: url('./check.svg');
        background-repeat: no-repeat
        background-size: 75%
        background-position: 50% 50%
    .switcherInner
        position: absolute
        left: 1px
        right: 1px
        top: 1px
        bottom: 1px
        border-radius: $contentSize
        opacity: 1
        transform: scale(1, 1)
        transition: transform 0.3s ease-out, opacity 0.3s ease-out
    
    &.checked
        .switcherInner
            transform: scale(0.1, 0.1)
            opacity: 0
            transition: transform 0.3s ease-out, opacity 0.2s ease-out 0.2s
