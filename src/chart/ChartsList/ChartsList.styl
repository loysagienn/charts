@import '../variables.styl'


$itemHeight = 34px
$borderWidth = 2px
$itemPadding = 3px
$paddingRight = 12px
$checkboxMarginRight = 4px
$transitionTime = 0.3s
$contentSize = $itemHeight - (2 * ($borderWidth + $itemPadding))
$textTranslate = - (($contentSize - $paddingRight / 2) / 2)

